# Desactivar listado de directorios
Options -Indexes

# Asegurar que los .php sensibles no se puedan abrir directo
<Files "conexion.php">
    Require all denied
</Files>

# (si tienes más archivos "solo internos", los agregas igual)
# <Files "otro_script_interno.php">
#     Require all denied
# </Files>

# Opcional: cabeceras básicas de seguridad para lo que se sirva desde /backend
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
